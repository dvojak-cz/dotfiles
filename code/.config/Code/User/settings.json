{
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.horizontal": "auto",
  "editor.fontSize": 13,
  "editor.matchBrackets": "always",
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  "editor.renderWhitespace": "all",
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  //"editor.glyphMargin": false,
  "editor.tokenColorCustomizations": {
    "comments": "#2ea542",
  },
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.acceptSuggestionOnEnter": "on",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.roundedSelection": false,
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "none",
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "solid",
  "editor.folding": true,
  "editor.autoClosingBrackets": "languageDefined",
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "diffEditor.renderSideBySide": false,
  "editor.cursorSurroundingLines": 8,
  "editor.inlineSuggest.enabled": true,
  "files.autoSave": "afterDelay",
  "workbench.colorTheme": "Gruvbox Dark (Medium)",
  "files.insertFinalNewline": true,
  "window.closeWhenEmpty": false,
  "explorer.compactFolders": false,
  // ====================
  // MultiCommands
  // ====================
  "multiCommand.commands": [
    {
      "command": "multiCommand.closeAndOpenQuick",
      "sequence": [
        "workbench.action.closeActiveEditor",
        "workbench.action.quickOpen"
      ]
    }
  ],
  // ====================
  // Extensions
  // ====================
  // VIM
  "vim.smartRelativeLine": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "#a9dc7660",
  "vim.highlightedyank.duration": 250,
  "vim.easymotion": true,
  "vim.useSystemClipboard": true,
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "d",
        "d"
      ],
      "after": [
        "\"",
        "_",
        "d",
        "d"
      ]
    },
    {
      "before": [
        "<leader>",
        "x"
      ],
      "after": [
        "\"",
        "_",
        "x"
      ]
    },
    {
      "before": [
        "<leader>",
        "p"
      ],
      "after": [
        "\"",
        "_",
        "p"
      ]
    },
    {
      "before": [
        "<leader>",
        "o"
      ],
      "after": [
        "o",
        "<Esc>"
      ]
    },
    {
      "before": [
        "<leader>",
        "O"
      ],
      "after": [
        "O",
        "<Esc>"
      ]
    },
    {
      "before": [
        "<leader>",
        "p",
        "f"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    // format document
    {
      "before": [
        "<leader>",
        "f"
      ],
      "commands": [
        "editor.action.formatDocument"
      ]
    },
    // moveLineDown
    {
      "before": [
        "J"
      ],
      "commands": [
        "editor.action.moveLinesDownAction"
      ]
    },
    // moveLineUp
    {
      "before": [
        "K"
      ],
      "commands": [
        "editor.action.moveLinesUpAction"
      ]
    },
    {
      "before": [
        "<leader>",
        "p"
      ],
      "after": [
        "_",
        "d",
        "P"
      ]
    },
    {
      "before": [
        "<C-d>"
      ],
      "after": [
        "<C-d>",
        "z",
        "z"
      ]
    },
    {
      "before": [
        "<C-u>"
      ],
      "after": [
        "<C-u>",
        "z",
        "z"
      ]
    },
    {
      "before": [
        "n"
      ],
      "after": [
        "n",
        "z",
        "z",
        "z",
        "v"
      ]
    },
    {
      "before": [
        "N"
      ],
      "after": [
        "N",
        "z",
        "z",
        "z",
        "v"
      ]
    }
  ],
  // LSP according to https://dev.to/ansonh/10-vs-code-vim-tricks-to-boost-your
  "vim.normalModeKeyBindings": [
    {
      "before": [
        "g",
        "p",
        "d"
      ],
      "commands": [
        "editor.action.peekDefinition"
      ]
    },
    {
      "before": [
        "g",
        "h"
      ],
      "commands": [
        "editor.action.showDefinitionPreviewHover"
      ]
    },
    {
      "before": [
        "g",
        "i"
      ],
      "commands": [
        "editor.action.goToImplementation"
      ]
    },
    {
      "before": [
        "g",
        "p",
        "i"
      ],
      "commands": [
        "editor.action.peekImplementation"
      ]
    },
    {
      "before": [
        "g",
        "q"
      ],
      "commands": [
        "editor.action.quickFix"
      ]
    },
    {
      "before": [
        "g",
        "r"
      ],
      "commands": [
        "editor.action.referenceSearch.trigger"
      ]
    },
    {
      "before": [
        "g",
        "t"
      ],
      "commands": [
        "editor.action.goToTypeDefinition"
      ]
    },
    {
      "before": [
        "g",
        "p",
        "t"
      ],
      "commands": [
        "editor.action.peekTypeDefinition"
      ]
    },
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "p"
      ],
      "after": [
        "_",
        "d",
        "P"
      ]
    },
    {
      "before": [
        "<leader>",
        "d"
      ],
      "after": [
        "_",
        "d"
      ]
    }
  ],
  // GO
  "git.autofetch": true,
  "debug.console.fontSize": 12,
  "markdown.preview.fontSize": 12,
  "terminal.integrated.fontSize": 13,
  "chat.editor.fontSize": 12,
  "scm.inputFontSize": 12,
  "editor.fontFamily": "'monospace regular','Droid Sans Mono', 'monospace', monospace",
  "workbench.startupEditor": "newUntitledFile",
  "scm.diffDecorationsGutterPattern": {
    "added": true
  },
  "scm.diffDecorations": "gutter",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "vs-kubernetes": {
    "vs-kubernetes.minikube-show-information-expiration": "2024-04-02T12:56:01.868Z",
    "vs-kubernetes.crd-code-completion": "enabled"
  },
  "redhat.telemetry.enabled": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  "debug.onTaskErrors": "debugAnyway",
  "editor.lineNumbers": "relative",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "right"
  },
  "workbench.colorCustomizations": {},
  "jsonnet.lsp.binaryPath": "/home/jtrojak/bin/jsonnet-language-server_0.13.1_linux_amd64",
  "window.zoomLevel": -1
}
